# Frontend Environment Variables Template
# Copy this file to .env.local and fill in your values
# Note: When building for production, WebSocket will use same origin (port 8000)

# WebSocket URL for backend connection (development only)
# In production build, this will be ignored and use same origin
VITE_WEBSOCKET_URL=ws://localhost:8000/ws

# Voice Model Configuration (Deepgram)
VITE_VOICE_MODEL=aura-2-thalia-en
VITE_VOICE_NAME=Thalia

# Business Information
VITE_BUSINESS_NAME=Bean & Brew Coffee Shop

# Gemini API Key (if using AI features)
GEMINI_API_KEY=your_gemini_api_key_here
